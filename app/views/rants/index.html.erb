<% if flash[:success] %>
    <div class="flashSuccess"><%= flash[:success] %></div>
<% end %>

<article class="profilePanel">
  <%= link_to image_tag("https://avatars2.githubusercontent.com/u/7839245?v=2&s=460", class: "profilePicture"), edit_user_path %>
  <h2 class="profileName">
  <%= current_user.first_name + " " + current_user.last_name %>
  </h2>
  <hr>

  <%= form_for :rant, url: new_rant_path, html: {class: 'rantForm'} do |f| %>

  <ul>
    <li class="full">
      <%= f.label :title, "A rant about:" %>
      <%= f.text_field :title %>
    </li>

    <li class="userInfoBio">
      <%= f.label :rant, "Rant:" %>
      <%= f.text_area :rant %>
    </li>

    <li class="submitButton">
      <%= f.submit "RANT" %>
    </li>
  </ul>

  <% end %>
</article>
<article class="rantPanel"></article>
