<% if following_id != current_user.id %>
    <% if Following.where(user_following_id: current_user.id, user_being_followed_id: following_id) != [] ? true : false %>
        <%= button_tag "Unfollow", class: 'followButton', data: {userID: following_id, following: false} %>
    <% else %>
        <%= button_tag "Follow", class: 'followButton', data: {userID: following_id, following: true} %>
    <% end %>
<% end %>