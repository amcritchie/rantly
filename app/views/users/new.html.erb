<%= form_for @user, url: users_path, html: {class: 'userForm', multipart: true} do |f| %>
    <h1 class="userInfoTitle">Register</h1>

    <div class="registerDiv">
      <% if @user.errors.any? %>
          <% @user.errors.messages.delete(:password) %>
          <ul>
            <% @user.errors.each do | attr, message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
    </div>

    <div class="registerDiv">
      <article class="half">
        <%= f.label :username %>
        <%= f.text_field :username %>
      </article>
      <article class="half">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </article>
    </div>

    <div class="registerDiv">
      <article class="half">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </article>
      <article class="half">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </article>
    </div>

    <div class="registerDiv">
      <article class="full">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </article>
    </div>

    <div class="registerDiv">
      <article class="full">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </article>
    </div>

    <div class="registerDiv">
      <article class="userInfoBio">
        <%= f.label :bio %>
        <%= f.text_area :bio %>
      </article>
    </div>

    <div class="registerDiv userInfoRadio">
      <p>How often do you rant?</p>
      <article class="radio">
        <%= f.radio_button :rant_frequency, 'Monthly' %>
        <%= f.label :rant_frequency, 'Monthly' %>
      </article>
      <article class="radio">
        <%= f.radio_button :rant_frequency, 'Weekly' %>
        <%= f.label :rant_frequency, 'Weekly' %>
      </article>
      <article class="radio">
        <%= f.radio_button :rant_frequency, 'Daily' %>
        <%= f.label :rant_frequency, 'Daily' %>
      </article>
    </div>

    <hr>

    <div class="registerDiv">
      <article class="submitButton">
        <%= f.submit 'Register' %>
      </article>
    </div>
    <hr>
<% end %>
