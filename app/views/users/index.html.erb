<div class="adminRantList">


  <div>
    <h2>Users</h2>
  </div>
  <div>
    <p>options</p>
  </div>
  <div>
    <div class="row">
      <article class="name">
        Name
      </article>
      <article class="email">
        Email
      </article>
      <article class="rantCount">
        Number of Rants
      </article>
      <article class="disabled">
        disabled
      </article>
      <article class="action">
        Action
      </article>
    </div>
  </div>
  <div>
    <% @users.each do |user| %>
        <div class="row">
          <article class="name">
            <%= user.full_name %>
          </article>
          <article class="email">
            <%= user.email %>
          </article>
          <article class="rantCount">
            <%= Rant.where(user_id: user.id).length %>
          </article>
          <article class="disabled">
            <%= user.disabled %>
          </article>
          <article class="action">
            <% if user.disabled == false %>
                <%= link_to "Disable", user_disable_path(user.id) %>
            <% else %>
                <%= link_to "Undisable", user_undisable_path(user.id) %>
            <% end %>
            <%= link_to "Impersonate", session_path(user.id), method: :post %>

          </article>
        </div>
    <% end %>
  </div>
</div>