<h1><%= title %></h1>
<hr width="90%">

<ul>

  <% rant_list.each_with_index do |rant, index| %>
      <li>
        <br>
        <% if index!=0 %>
            <hr width="50%">
        <% end %>
        <div class="rant">
          <article class="ranter">
            <div class="name">
              <h3><%= rant.user.first_name.capitalize %></h3>
            </div>
            <div class="image">
              <%= image_tag(rant.user.image_url) %>
            </div>
            <div class="name">
              <%= link_to "Follow", root_path if rant.user_id != current_user.id%>
            </div>
          </article>
          <article class="rantBody">
            <div>
              <p><%= rant.rant %></p>
            </div>
          </article>
          <article class="bottom">
            <div>
              <%= link_to "Delete", rant_path(rant), method: :delete if rant.user_id == current_user.id %>
            </div>
          </article>
        </div>
      </li>
  <% end %>
</ul>